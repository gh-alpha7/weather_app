<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.subham.weat.MainActivity">


    <TextView
        android:layout_width="300sp"
        android:layout_height="50sp"
        android:id="@+id/textView"
        android:textAlignment="center"
        android:phoneNumber="true"
        android:textSize="20sp"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="200sp"
        android:layout_height="50sp"
        android:id="@+id/editText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Enter the city"

        android:textAlignment="center" />

    <TextView
        android:layout_width="300sp"
        android:layout_height="50sp"
        android:id="@+id/textView2"
        android:layout_below="@+id/editText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="94dp"
        android:textAlignment="center"
        android:textSize="20sp" />

    <ImageView
        android:layout_width="250sp"
        android:layout_height="250sp"
        android:id="@+id/clear_sky"
        android:src="@drawable/clear_sky"
        android:alpha="0"
        android:layout_above="@+id/button"
        android:layout_alignStart="@+id/light_rain" />

    <ImageView
        android:layout_width="250sp"
        android:layout_height="250sp"
        android:id="@+id/few_clouds"
        android:layout_alignTop="@+id/clear_sky"
        android:src="@drawable/few_clouds"
        android:layout_toStartOf="@+id/editText"
        android:alpha="0"
        android:layout_alignEnd="@+id/button" />

    <ImageView
        android:layout_width="250sp"
        android:layout_height="250sp"
        android:id="@+id/light_rain"
        android:src="@drawable/light_rain"
        android:alpha="0"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="250sp"
        android:layout_height="250sp"
        android:id="@+id/wea"
        android:src="@drawable/wea"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignStart="@+id/clear_sky" />

</RelativeLayout>
